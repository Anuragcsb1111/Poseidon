<?xml version="1.0" encoding="UTF-8"?>
<configuration status="warn">
    <Appenders>
        <Console name="CONSOLE">
            <PatternLayout pattern="%remoteHost [%date{dd/MM/yyyy:HH:mm:ss.SSS}] &quot;%requestLine&quot; &quot;%requestHeader{Referer}&quot; &quot;%requestHeader{User-Agent}&quot; %statusCode %contentLength %elapsedTime%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <ROOT level="INFO" includeLocation="false">
            <AppenderRef ref="CONSOLE"/>
        </ROOT>
    </Loggers>
</configuration>